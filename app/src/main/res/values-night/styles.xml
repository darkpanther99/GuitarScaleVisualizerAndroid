<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#454545</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">#000000</item>
        <item name="editTextStyle">@style/etStyle</item>
        <item name="spinnerStyle">@style/spinStyle</item>
        <item name="android:textViewStyle">@style/tvStyle</item>

    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="spinStyle" parent="@android:style/Widget.Spinner">
        <item name="android:background">#E6E6E6</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:textColor">#787878</item>
    </style>

    <style name="etStyle" parent="@android:style/Widget.EditText">
        <item name="android:background">#E6E6E6</item>
    </style>

    <style name="tvStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">#787878</item>
    </style>

</resources>